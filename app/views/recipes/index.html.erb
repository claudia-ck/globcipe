<h1>Welcome to Globcipe</h1>

  <div class="grid_container">
    <% @recipe.each do |recipe| %>
      <div class="card">
        <div class="card-img">
          <%# to update image %>
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag(recipe.image_url, width: 80, height: 80) %>
          <% end %>
        </div>

        <div class="card-body">
          NAME  <%= recipe.name %>
          CATEGORY  <%= recipe.category %>
          AREA  <%= recipe.area %>
        </div>
        <%= link_to 'Details', recipe_path(recipe) %>
      </div>
    <% end %>
  </div>
